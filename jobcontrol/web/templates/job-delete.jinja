{% extends 'base.jinja' %}

{% block page_title %}Job {{ job.id }}{% endblock %}

{% block page_body %}
<div class="container-fluid">

  {{ macros.job_info_title(job) }}
  {{ macros.job_info_nav(job.id, current='delete') }}

  <h2>Are you sure you want to delete this job?</h2>

  {# {% set form_data = {} %} #}
  {# {% set form_errors = {} %} #}

  {% call macros.form(action=url_for('.job_action', job_id=job.id)) %}
    {{ macros.form_csrf_token() }}
    {{ macros.form_button('Delete job #%d'|format(job.id), class='danger', action='delete') }}
  {% endcall %}

</div>
{% endblock %}
